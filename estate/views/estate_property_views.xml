<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property Action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state_filter': True}</field>
    </record>
    
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state in ['offerReceived', 'offerAccepted']" decoration-bf="state in ['offerAccepted']" decoration-muted="state in ['sold']">
                <field name="name"></field>
                <field name="property_type_id"></field>
                <field name="postcode"></field>
                <field name="tag_ids"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <field name="expected_price"></field>
                <field name="selling_price"></field>
                <field name="date_availability" optional='hide'></field>
                <field name="state" invisible='True' nolabel='True'></field>
            </tree>
        </field>
    </record>
    
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <group  invisible="state in ['sold', 'canceled']">
                        <button name = "action_sold" type="object" string="Sold"></button>
                        <button name = "action_cancel" type="object" string="Cancel"></button>
                    </group>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"></field>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                    <group>
                        <group>
                            <field name="postcode"></field>
                            <field name="property_type_id" widget="many2one" options="{'no_create_edit': true, 'no_create':true}"></field>
                            <field name="date_availability"></field>
                        </group>
                        <group>
                            <field name="expected_price"></field>
                            <field name="best_price"></field>
                            <field name="selling_price"></field>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"></field>
                                    <field name="bedrooms"></field>
                                    <field name="living_area"></field>
                                    <field name="facades"></field>
                                    <field name="garage"></field>
                                    <field name="garden"></field>
                                    <field name="garden_area" invisible="not garden"></field>
                                    <field name="garden_orientation" invisible="not garden"></field>
                                    <field name="total_area"></field>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids" widget="one2many" readonly="state not in ['offerReceived', 'new']">
                                    <tree editable="bottom" decoration-danger="state in ['refused']" decoration-success="state in ['accepted']"> 
                                        <field name="price"/> 
                                        <field name="partner_id"/>
                                        <field name="validity"></field>
                                        <field name="date_deadline"></field>
                                        <button name="action_accept" type="object" icon="fa-check"  string="Accept" invisible="state in ['accepted', 'refused']"></button>
                                        <button name="action_refuse" type="object" icon="fa-times" string="Refuse" invisible="state in ['accepted', 'refused']"></button>
                                        <field name="state" invisible="True" nolabel = "True"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="salesperson_id"></field>
                                    <field name="buyer_id"></field>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="expected_price"></field>
                <field name="bedrooms"></field>
                <field name="living_area" filter_domain="[('living_area', '&gt;=', self)]"></field>
                <field name="facades"></field>
                <field name="property_type_id"></field>
                <filter name="state_filter" string="Available" domain="['|', ('state', '=', 'new'),('state', '=', 'offerReceived')]"/>
                <filter name="postcode_group" string="Postcode" context="{'group_by': 'postcode'}"></filter>
            </search>
        </field>
    </record>
</odoo>     