<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Estate Property Offer Action</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate_property_offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="price" ></field>
                <field name="partner_id"></field>
                <field name="state"></field>
                <field name="validity"></field>
                <field name="date_deadline"></field>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate_property_offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"></field>
                        <field name="partner_id"></field>
                        <field name="state"></field>
                        <field name="validity"></field>
                        <field name="date_deadline"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    </odoo>